@model IceCreamClient.Models.Member

@{
    ViewData["Title"] = "Register";
}

<!--Page Title-->
        <section class="page-title centred" style="background-image: url(assets/images/background/page-title.jpg);">
            <div class="auto-container">
                <div class="content-box">
                    <div class="title">
                        <h1>Register</h1>
                    </div>
                    <ul class="bread-crumb clearfix">
                        <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                        <li>Register</li>
                    </ul>
                </div>
            </div>
        </section>
        <!--End Page Title-->


        <!-- checkout-section -->
        <section class="checkout-section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 upper-column">
                        <div class="upper-box">
                            <div class="customer single-box">Returning Customer? <a asp-action="Login" asp-controller="Member">Click here to Login</a></div>
                        </div>
                    </div>
                </div>
                <form asp-action="Register" method="post" class="billing-form">
                <div class="row">
                    <div class="col-lg-6 col-md-12 col-sm-12 left-column">
                        <div class="inner-box">
                            <div class="billing-info">
                                <h4 class="sub-title">Billing Details</h4>
                                
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                            <label>Username*</label>
                                            <div class="field-input">
                                                <input type="text" asp-for="Username">
                                                <span asp-validation-for="Username" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                            <label>Password*</label>
                                            <div class="field-input">
                                                <input type="text" asp-for="Password">
                                                <span asp-validation-for="Password" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                            <label>Email Address*</label>
                                            <div class="field-input">
                                                <input type="email" asp-for="Email">
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                            <label>Fullname</label>
                                            <div class="field-input">
                                                <input type="text" asp-for="Fullname">
                                            </div>
                                        </div>                             
                                    </div>
                               
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 col-sm-12 right-column">
                        <div class="inner-box">
                            <div class="order-info">
                                <h4 class="sub-title">Your Member Option</h4>
                                <div class="order-product">
                                    <ul class="order-list clearfix">
                                        <li>
                                            <div class="single-box clearfix">
                                                <img src="assets/images/resource/shop/order-1.jpg" alt="">
                                                <h6>Monthly</h6>
                                                <span><input type="radio" asp-for="IdMemberOption" value="1"/></span>
                                                <span>$15</span>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="single-box clearfix">
                                                <img src="assets/images/resource/shop/order-2.jpg" alt="">
                                                <h6>Yearly</h6>
                                                <span><input type="radio" asp-for="IdMemberOption" value="2"/></span>
                                                <span>$150</span>
                                            </div>
                                        </li>
              
                                    </ul>
                                </div>
                                
                            </div>
                                <div class="btn-box">
                                    <button class="theme-btn-one" type="submit">Register</button>
                                </div>
                        </div>
                    </div>
                </div>
                 </form>
            </div>
        </section>
        <!-- checkout-section end -->